{
  "name": "wekitsu-desktop",
  "productName": "Wekitsu Desktop",
  "version": "0.0.7",
  "description": "wekitsu desktop is an electron wrapper for the web application wekitsu",
  "repository": "gitink-studio/wekitsu-desktop",
  "node": "22.13.4",
  "main": "dist/main.cjs",
  "scripts": {
    "build": "tsc && node -e \"const fs=require('fs'); fs.copyFileSync('src/settings.html', 'dist/settings.html'); fs.copyFileSync('src/sync-progress.html', 'dist/sync-progress.html');\"",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.gitink.wekitsu",
    "productName": "Wekitsu Desktop",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Wekitsu Desktop"
    },
    "publish": {
      "provider": "github",
      "owner": "gitink-studio",
      "repo": "wekitsu-desktop"
    }
  },
  "author": "Joshua Jebadurai",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.4",
    "dotenv-cli": "^11.0.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3"
  }
}
